<UserControl x:Class="Local_Gallery.GalleryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Local_Gallery"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">

    <Grid Background="White" Cursor="Hand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image x:Name="GalleryItemImage" RenderOptions.BitmapScalingMode="LowQuality" Cursor="Hand" />
        <Label x:Name="GalleryItemTitle" Grid.Row="1" Content="Title" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>


</UserControl>
